print('Program MenghitungVolumeDanLuasPermukaanBola')

phi = 22/7 
r=int(input("Masukkan Nilai Jari-Jari ="))
volume = 4/3*(phi*r*r*r)
luas = 4*phi*r*r

print("Volume Bola adalah =", volume)
print("Luas Bola adalah =", luas)

